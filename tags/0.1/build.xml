<?xml version="1.0"?>

<project name="Steve-Museum" basedir="." default="build">

<target name="build">
<echo message="starting build process..."/>

<exec command= "cd examples/steve; svn update"/>

</target>

<target name="success">
<echo message="wohoo, build process worked..."/>
</target>

<target name="failed">
<echo message="doh, build process failed..."/>
</target>

<target name="publish">
<!-- Transform docbook with an imaginary XSLT file -->
<xslt todir="output" style="xsl/build.xsl" overwrite="true">
  <fileset dir=".">
    <include name="xinc_log.xml" />
  </fileset>
</xslt>

<copy file="output/xinc_log.xml" tofile="/var/www/html/xinc/xinc.html"/>
<copy file="output/log.xml" tofile="/var/www/html/xinc/build.html"/>

</target>


</project>